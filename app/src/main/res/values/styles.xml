<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="imageGroupViewPlaceHolderColor">@color/colorLightGreen</item>
        <item name="imageGroupViewImageRadius">@dimen/image_group_view_image_radius</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.DrawerOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/colorWhite</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegTraderTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegTraderMainText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RegTraderLabelText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RegTraderLabelText.PrimaryColor">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RegTraderHeaderText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegTraderMainText.PrimaryColor">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="LongButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/default_button_width</item>
    </style>

    <style name="OnBoardText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OnBoardText.Title" />

    <style name="OnBoardText.Text">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="SecondaryTitleText">
        <item name="textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top_low</item>
        <item name="android:textSize">@dimen/text_size_very_low</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/margin_horizontal_medium</item>
    </style>

    <style name="SecondaryDefaultText">
        <item name="android:layout_marginStart">@dimen/margin_start_low</item>
        <item name="android:textSize">@dimen/text_size_low</item>
    </style>

    <style name="GridDefaultText">
        <item name="android:background">@drawable/text_stroke</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.ImageGroupViewDefStyle" parent="">
        <item name="gridSize">@dimen/image_group_view_grid_size</item>
        <item name="overflownTextAppearance">@style/ImageGroupViewOverflowingTextAppearanceDefStyle</item>
        <item name="overflownTextTemplate">@string/image_group_view_overflown_text_template</item>
        <item name="android:background">@drawable/image_view_group_background</item>
        <item name="clipToOutline">true</item>
    </style>

    <style name="ImageGroupViewOverflowingTextAppearanceDefStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/image_group_view_text_color</item>
    </style>

</resources>