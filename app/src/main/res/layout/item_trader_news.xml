<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:cardUseCompatPadding="true"
        app:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_trader_news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="start|center_vertical"
                    android:text="15.05.2021 в 10.35" />

                <ImageButton
                    android:id="@+id/btn_item_trader_news_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:backgroundTint="@color/colorWhite"
                    app:srcCompat="@drawable/ic_kebab" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_trader_news_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingTop="8dp"
                android:text="@string/text" />

            <Button
                android:id="@+id/btn_item_trader_news_show"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="@string/show"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_item_trader_news_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item_trader_news_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_item_trader_news_like_count"
                    app:layout_constraintEnd_toStartOf="@+id/iv_item_trader_news_dislike"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_like" />

                <ImageView
                    android:id="@+id/iv_item_trader_news_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_item_trader_news_like"
                    app:layout_constraintStart_toEndOf="@+id/iv_item_trader_news_like"
                    app:layout_constraintTop_toTopOf="@+id/iv_item_trader_news_like"
                    app:srcCompat="@drawable/ic_dislike" />

                <Button
                    android:id="@+id/btn_item_trader_news_show_comments"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="17 комментариев"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_item_trader_news_dislike"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_item_trader_news_dislike"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_item_trader_news_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="1"
                    app:layout_constraintEnd_toEndOf="@+id/iv_item_trader_news_like"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="@+id/iv_item_trader_news_like"
                    app:layout_constraintTop_toBottomOf="@+id/iv_item_trader_news_like" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0"
                    app:layout_constraintEnd_toEndOf="@+id/iv_item_trader_news_dislike"
                    app:layout_constraintStart_toStartOf="@+id/iv_item_trader_news_dislike"
                    app:layout_constraintTop_toBottomOf="@+id/iv_item_trader_news_dislike" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/colorWhite"
                    app:layout_constraintEnd_toEndOf="@+id/iv_item_trader_news_like"
                    app:layout_constraintStart_toStartOf="@+id/iv_item_trader_news_like"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_trader_news_like_count"
                    app:srcCompat="@drawable/ic_btn_like" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
                    app:layout_constraintEnd_toEndOf="@+id/iv_item_trader_news_dislike"
                    app:layout_constraintStart_toStartOf="@+id/iv_item_trader_news_dislike"
                    app:layout_constraintTop_toTopOf="@+id/imageButton2"
                    app:srcCompat="@drawable/ic_btn_dislike" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/comment_on"
                    android:textSize="10sp"
                    app:icon="@drawable/ic_comment"
                    app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageButton5"
                    tools:ignore="SmallSp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:backgroundTint="@color/colorWhite"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
                    app:layout_constraintStart_toEndOf="@+id/imageButton3"
                    app:layout_constraintTop_toTopOf="@+id/imageButton3"
                    app:srcCompat="@drawable/share" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>