<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTraderRegBackground"
    tools:context=".ui.fragment.entrance.RegistrationAsTraderFragmentFour">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_card_trader_reg_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/up_card_trader_reg_height"
        android:elevation="@dimen/cardview_add_elevation"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/RegTraderTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_marginStart="16dp"
            android:text="@string/your_profile" />


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_trader_reg_5_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_card_trader_reg_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_trader_reg_5_title1"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="@dimen/default_vertical_margin_trader_reg"
                android:text="@string/trader_reg_title1"
                android:textColor="@color/colorTitleRegistration"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_trader_reg_5_free_plan"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="@dimen/default_vertical_margin_trader_reg"
                android:checked="true"
                android:text="@string/text_free_plan"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_5_title1" />

            <View
                android:id="@+id/divider1_trader_reg_5"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:background="@color/colorDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_trader_reg_5_free_plan" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_trader_reg_5_pay_plan"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="@dimen/default_vertical_margin_trader_reg"
                android:text="@string/text_pay_plan"
                app:layout_constraintTop_toBottomOf="@id/divider1_trader_reg_5" />

            <TextView
                android:id="@+id/tv_trader_reg_5_pay_plan_detail"
                style="@style/LinkText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:text="@string/detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_trader_reg_5_pay_plan" />

            <TextView
                android:id="@+id/tv_trader_reg_5_text1"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:text="@string/trader_reg_4_text1"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_5_pay_plan_detail" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_trader_reg_5_except_accounts"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:inputType="text"
                app:boxBackgroundColor="@color/design_default_color_background"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_5_text1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_trader_reg_5_except_accounts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider2_trader_reg_5"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:background="@color/colorDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_trader_reg_5_except_accounts" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_trader_reg_5_individual_plan"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="@dimen/default_vertical_margin_trader_reg"
                android:text="@string/text_individual_plan"
                app:layout_constraintTop_toBottomOf="@id/divider2_trader_reg_5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_trader_reg_5_individual_plan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:importantForAutofill="no"
                android:inputType="number"
                app:boxBackgroundColor="@color/design_default_color_background"
                app:layout_constraintBottom_toBottomOf="@id/switch_trader_reg_5_individual_plan"
                app:layout_constraintEnd_toEndOf="@id/switch_trader_reg_5_individual_plan"
                app:layout_constraintTop_toTopOf="@id/switch_trader_reg_5_individual_plan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/ti_trader_reg_5_except_accounts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_trader_reg_5_text2"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:text="@string/trader_reg_4_text2"
                app:layout_constraintEnd_toStartOf="@id/til_trader_reg_5_individual_plan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_trader_reg_5_individual_plan" />

            <View
                android:id="@+id/divider3_trader_reg_5"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:background="@color/colorDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_5_text2" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_trader_reg_5_invisible_plan"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="@dimen/default_vertical_margin_trader_reg"
                android:text="@string/text_invisible_plan"
                android:textColor="@color/colorTitleRegistration"
                app:layout_constraintTop_toBottomOf="@id/divider3_trader_reg_5" />

            <TextView
                android:id="@+id/tv_trader_reg_5_text3"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:text="@string/trader_reg_4_text3"
                app:layout_constraintTop_toBottomOf="@id/switch_trader_reg_5_invisible_plan" />

            <View
                android:id="@+id/divider4_trader_reg_5"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:background="@color/colorDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_5_text3" />

            <TextView
                android:id="@+id/tv_trader_reg_5_trade_terminal"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="@dimen/default_vertical_margin_trader_reg"
                android:text="@string/specify_trade_terminal"
                android:textColor="@color/colorTitleRegistration"
                app:layout_constraintTop_toBottomOf="@id/divider4_trader_reg_5" />

            <Spinner
                android:id="@+id/spinner_trader_reg_5_trade_terminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_5_trade_terminal" />

            <View
                android:id="@+id/divider5_trader_reg_5"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/default_horizon_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:background="@color/colorDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_trader_reg_5_trade_terminal" />

            <Button
                android:id="@+id/btn_send_trader_reg_5"
                style="@style/LongButton"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:text="@string/send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider5_trader_reg_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>