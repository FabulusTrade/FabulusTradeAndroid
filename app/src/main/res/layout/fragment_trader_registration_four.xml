<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.trader.registration.TraderRegistrationFragmentFour">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_card_trader_reg_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/up_card_trader_reg_height"
        android:elevation="@dimen/cardview_add_elevation"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/RegTraderTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_marginStart="16dp"
            android:text="@string/your_profile" />


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_trader_reg_4_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_card_trader_reg_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_card_trader_reg_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_trader_reg_4_title1"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_trader_reg"
                android:layout_marginTop="16dp"
                android:text="@string/trader_reg_title1"
                android:textColor="@color/colorTitleRegistration"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_trader_reg_free_plan"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_trader_reg"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:text="@string/text_free_plan"
                app:layout_constraintBottom_toTopOf="@id/divider1_trader_reg_4"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_4_title1" />

            <TextView
                android:id="@+id/divider1_trader_reg_4"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginStart="@dimen/default_margin_trader_reg"
                android:layout_marginVertical="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_trader_reg_free_plan"
                app:layout_constraintBottom_toTopOf="@id/switch_trader_reg_pay_plan"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_trader_reg_pay_plan"
                style="@style/RegTraderLabelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_trader_reg"
                android:layout_marginTop="16dp"
                android:text="@string/text_pay_plan"
                app:layout_constraintTop_toBottomOf="@id/divider1_trader_reg_4" />

            <TextView
                android:id="@+id/tv_trader_reg_pay_plan_detail"
                style="@style/LinkText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/default_margin_trader_reg"
                android:layout_marginVertical="4dp"
                android:text="@string/detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_trader_reg_pay_plan" />

            <TextView
                android:id="@+id/tv_trader_reg_4_text1"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:text="@string/trader_reg_4_text1"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_pay_plan_detail" />

            <EditText
                android:id="@+id/et_trader_reg_4_except_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin_trader_reg"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/tv_trader_reg_4_text1"
                app:layout_constraintBottom_toTopOf="@id/divider2_trader_reg_4"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/divider2_trader_reg_4"
                android:layout_width="196dp"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginStart="@dimen/default_margin_trader_reg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_trader_reg_4_except_accounts"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_card_trader_reg_4"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_back_trader_reg_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@null"
            android:src="@drawable/ic_arrow_back_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_trader_reg_4_percent_complete"
                style="@style/RegTraderMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textStyle="bold"
                tools:text="100%" />

            <TextView
                style="@style/RegTraderMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_complete" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>