<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_post_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/cl_post_detail_layout_margin_start"
    android:layout_marginEnd="@dimen/cl_post_detail_layout_margin_end">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_comment_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/nsv_comment_view_margin_bottom"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/ll_add_comment"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/postConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/inc_item_post_header"
                layout="@layout/item_post_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_author_post_horizontal_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_author_post_horizontal_divider_layout_height"
                android:layout_marginTop="@dimen/view_author_post_horizontal_divider_margin_top"
                android:background="@color/view_author_post_horizontal_divider_background_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inc_item_post_header" />

            <TextView
                android:id="@+id/tv_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_post_margin_top"
                android:layout_marginEnd="@dimen/tv_post_margin_end"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/tv_post_text_size"
                app:layout_constraintTop_toBottomOf="@+id/view_author_post_horizontal_divider"
                tools:text="ЦБ России обдумывает повышение ставки до 5,5% уже в 2021 году." />

            <ru.fabulus.fabulustrade.ui.customview.imagegroup.ImageGroupView
                android:id="@+id/image_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_group_view_height"
                android:layout_marginTop="@dimen/margin_top_low"
                app:layout_constraintTop_toBottomOf="@+id/tv_post" />

            <TextView
                android:id="@+id/tv_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_warning_margin_top"
                android:text="@string/tv_warning_text"
                android:textColor="@color/tv_warning_text_color"
                android:textSize="@dimen/tv_warning_text_size"
                app:layout_constraintTop_toBottomOf="@+id/image_group" />

            <include
                android:id="@+id/inc_item_post_footer"
                layout="@layout/item_post_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_warning" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_comment_count_margin_top"
                android:textColor="@color/tv_comment_count_text_color"
                android:textSize="@dimen/tv_comment_count_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inc_item_post_footer"
                tools:text="3 комментария" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_post_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"

        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_current_user_avatar"
            android:layout_width="@dimen/iv_current_user_avatar_layout_width"
            android:layout_height="@dimen/iv_current_user_avatar_layout_height"
            android:layout_marginBottom="@dimen/iv_current_user_avatar_margin_bottom"
            android:contentDescription="@string/iv_current_user_avatar_content_description"
            android:foreground="@drawable/bg_avatar"
            android:scaleType="center"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/et_new_comment_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/et_new_comment_text_margin_start"
            android:layout_marginEnd="@dimen/et_new_comment_text_margin_end"
            android:layout_marginBottom="@dimen/et_new_comment_text_margin_bottom"
            android:layout_weight="1"
            android:autofillHints="@string/et_new_comment_text_hint"
            android:background="@color/colorWhite"
            android:hint="@string/et_new_comment_text_hint"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="200"
            android:textSize="@dimen/et_new_comment_text_text_size" />

        <ImageButton
            android:id="@+id/ib_send_comment"
            android:layout_width="@dimen/ib_send_comment_layout_width"
            android:layout_height="@dimen/ib_send_comment_layout_height"
            android:layout_marginBottom="@dimen/ib_send_comment_margin_bottom"
            android:background="@drawable/ic_send_disabled"
            android:clickable="false"
            android:contentDescription="@string/ib_send_comment_content_description" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>