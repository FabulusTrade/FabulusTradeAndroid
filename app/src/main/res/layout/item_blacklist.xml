<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_traders_signed_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_blacklist_ava"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:foreground="@drawable/bg_avatar"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_blacklist_delete_button"
        app:layout_constraintEnd_toStartOf="@+id/tv_blacklist_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_blacklist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_blacklisted_at"
        app:layout_constraintEnd_toStartOf="@+id/tv_blacklist_profit"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@+id/iv_blacklist_ava"
        app:layout_constraintTop_toTopOf="@+id/iv_blacklist_ava"
        app:layout_constraintVertical_weight="0.1" />

    <TextView
        android:id="@+id/tv_blacklisted_at"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blacklist_ava"
        app:layout_constraintEnd_toStartOf="@+id/tv_blacklist_profit"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@+id/iv_blacklist_ava"
        app:layout_constraintTop_toBottomOf="@+id/tv_blacklist_name"
        app:layout_constraintVertical_weight="0.1" />

    <TextView
        android:id="@+id/tv_trader_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blacklist_ava"
        app:layout_constraintEnd_toStartOf="@+id/tv_blacklist_profit"
        app:layout_constraintHorizontal_weight="0.4"
        app:layout_constraintStart_toEndOf="@+id/iv_blacklist_ava"
        app:layout_constraintTop_toTopOf="@+id/iv_blacklist_ava"
        app:layout_constraintVertical_weight="0.1" />

    <TextView
        android:id="@+id/tv_blacklist_profit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blacklist_ava"
        app:layout_constraintEnd_toStartOf="@+id/tv_follower_counter"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toEndOf="@+id/tv_blacklist_name"
        app:layout_constraintTop_toTopOf="@+id/iv_blacklist_ava" />

    <TextView
        android:id="@+id/tv_follower_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blacklist_ava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toEndOf="@+id/tv_blacklist_profit"
        app:layout_constraintTop_toTopOf="@+id/iv_blacklist_ava" />

    <TextView
        android:id="@+id/tv_blacklist_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Удалить из черного списка"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
